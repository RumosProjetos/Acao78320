                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Promocao" /> @Html.DisplayNameFor(model => model.Promocao)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
